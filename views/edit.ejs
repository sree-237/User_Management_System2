<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Username</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #fff3cd;
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        .warning {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2>You are about to edit this user: <%= user.email %></h2>

        <% if (typeof warning !== 'undefined') { %>
            <div class="alert alert-danger"><%= warning %></div>
        <% } %>

        <form method="POST" action="/user/<%= user.id %>?_method=PATCH" class="mt-4">
            <div class="mb-3">
                <label for="username" class="form-label">New Username</label>
                <textarea name="username" id="username" class="form-control" rows="3" required><%= user.username %></textarea>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Confirm Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" required>
            </div>

            <button type="submit" class="btn btn-primary w-100">Edit</button>
        </form>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
